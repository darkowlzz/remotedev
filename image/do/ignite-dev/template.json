{
    "variables": {
        "do_token": "",
        "image_name": "",
        "region": ""
    },
    "builders": [
        {
            "type": "digitalocean",
            "api_token": "{{ user `do_token` }}",
            "snapshot_name": "{{ user `image_name` }}",
            "ssh_username": "root",
            "image": "ubuntu-20-04-x64",
            "region": "{{ user `region` }}",
            "size": "512mb"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "users",
            "destination": "/tmp/users"
        },
        {
            "type": "file",
            "source": "bashrc",
            "destination": "/tmp/bashrc"
        },
        {
            "type": "file",
            "source": "bash_profile",
            "destination": "/tmp/bash_profile"
        },
        {
            "type": "file",
            "source": "bash_aliases",
            "destination": "/tmp/bash_aliases"
        },
        {
            "type": "file",
            "source": "gitconfig",
            "destination": "/tmp/gitconfig"
        },
        {
            "type": "file",
            "source": "init.vim",
            "destination": "/tmp/init.vim"
        },
        {
            "type": "shell",
            "scripts": [
                "setup.sh"
            ]
        }
    ]
}
